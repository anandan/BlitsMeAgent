    <Style x:Key="ChatItemContainerStyle" TargetType="{x:Type TabItem}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="Background" Value="#FF2B519B" />
        <Setter Property="Margin" Value="-2,0,0.166,0" />
        <Setter Property="Visibility" Value="Collapsed" />
    </Style>
    <Style x:Key="MessageTimeStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Height" Value="14" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Foreground" Value="#FF858282" />
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    <ts:RelativeMessageTimeConverter x:Key="relativeMessageTimeConverter" />
    <DataTemplate x:Key="ChatMeGroup">
        <StackPanel>
            <RichTextBox Style="{StaticResource ChatBubbleMe}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Message, FallbackValue=An intermediary message from me}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Image Style="{StaticResource ChatBubbleJoinMe}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ChatMeSingle">
        <StackPanel>
            <RichTextBox Style="{StaticResource ChatBubbleMe}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Message, FallbackValue=A message from us}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StackPanel Orientation="Horizontal" Margin="0,0,28,0" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource MessageTimeStyle}" 
					HorizontalAlignment="Right"
					Margin="0,4,0,0"
					Text="{Binding Path=DateTime, Converter={StaticResource relativeMessageTimeConverter}, FallbackValue=Yesterday 8:45}"
				/>
                <Image Style="{StaticResource ChatBubblePointMe}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ChatOtherGroup">
        <StackPanel>
            <RichTextBox Style="{StaticResource ChatBubbleOther}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Message, FallbackValue=An intermediary message from them}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <Image Style="{StaticResource ChatBubbleJoinOther}" />
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ChatOtherSingle">
        <StackPanel>
            <RichTextBox Style="{StaticResource ChatBubbleOther}">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Message, FallbackValue=A message from them}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StackPanel Orientation="Horizontal" Margin="28,0,0,0" HorizontalAlignment="Left">
                <Image Style="{StaticResource ChatBubblePointOther}" />
                <TextBlock  Style="{StaticResource MessageTimeStyle}"
							HorizontalAlignment="Left"
							Margin="6,4,0,0"
							Text="{Binding DateTime, Converter={StaticResource relativeMessageTimeConverter}, FallbackValue=Yesterday 8:49}"
						/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="ChatSystem">
        <StackPanel>
            <RichTextBox Style="{StaticResource ChatBubbleSystem}" Background="#FFFFAF23" Foreground="Black">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Path=Message, FallbackValue=A message from the system}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StackPanel Orientation="Horizontal" Margin="0,0,40,0" HorizontalAlignment="Right">
                <TextBlock  Style="{StaticResource MessageTimeStyle}"
							HorizontalAlignment="Left"
							Margin="6,4,0,0"
							Text="{Binding DateTime, Converter={StaticResource relativeMessageTimeConverter}, FallbackValue=Yesterday 8:49}"
						/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="MessageBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Background" Value="#FF2B519B" />
        <Setter Property="BorderThickness" Value="0"  />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="5" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ServiceCompleteRichText" TargetType="RichTextBox">
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="FontSize" Value="12pt" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#FF2B519B" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style x:Key="ServiceCompleteText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Calibri" />
        <Setter Property="FontSize" Value="12pt" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <DataTemplate x:Key="ChatServiceComplete">
        <StackPanel>
            <Border Style="{StaticResource MessageBorder}">
        		<Grid>
        			<Image Margin="0,0,0,-5.573" Source="/BlitsMe.Agent;component/UI/WPF/Images/arrow_limited_blue_bg.png" Width="42.482" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" />
        			<StackPanel Margin="47.482,0,0,0">
        				<StackPanel>
        					<RichTextBox Width="Auto"
        						Style="{StaticResource ServiceCompleteRichText}" MinWidth="300" HorizontalAlignment="Stretch" Margin="0,0,10,0">
        						<FlowDocument>
        							<Paragraph><Run Text="{Binding Message, FallbackValue=You were just helped by Joe Bloggs please rate his service below.}" /></Paragraph>
        						</FlowDocument>
        					</RichTextBox>
        					<Grid Width="Auto" >
        						<TextBlock Style="{StaticResource ServiceCompleteText}" Margin="6.75,4,0,0" VerticalAlignment="Top"><Run Text="Knowledge"/></TextBlock>
        						<Grid Margin="90,4,0,0" Height="18" HorizontalAlignment="Left" VerticalAlignment="Top">
        							<ed:RegularPolygon Name="Knowledge1" Style="{StaticResource ScorecardStarEmpty}" Margin="0,0,0,0" />
        							<ed:RegularPolygon Name="Knowledge2" Style="{StaticResource ScorecardStarEmpty}" Margin="15,0,0,0" />
        							<ed:RegularPolygon Name="Knowledge3" Style="{StaticResource ScorecardStarEmpty}" Margin="30,0,0,0" />
        							<ed:RegularPolygon Name="Knowledge4" Style="{StaticResource ScorecardStarEmpty}" Margin="45,0,0,0" />
        							<ed:RegularPolygon Name="Knowledge5" Style="{StaticResource ScorecardStarEmpty}" Margin="60,0,0,0" />
        						</Grid>
        						<TextBlock Style="{StaticResource ServiceCompleteText}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="6.75,23,0,0"><Run Text="Service"/></TextBlock>
        						<Grid Margin="90,23,0,0" Height="18" HorizontalAlignment="Left" VerticalAlignment="Top">
        							<ed:RegularPolygon Style="{StaticResource ScorecardStarEmpty}" Margin="0,0,0,0" />
        							<ed:RegularPolygon Style="{StaticResource ScorecardStarEmpty}" Margin="15,0,0,0" />
        							<ed:RegularPolygon Style="{StaticResource ScorecardStarEmpty}" Margin="30,0,0,0" />
        							<ed:RegularPolygon Style="{StaticResource ScorecardStarEmpty}" Margin="45,0,0,0" />
        							<ed:RegularPolygon Style="{StaticResource ScorecardStarEmpty}" Margin="60,0,0,0" />
        						</Grid>
        						<Image Source="/BlitsMe.Agent;component/UI/WPF/Images/facebook-like.png" Width="59" HorizontalAlignment="Left" Margin="176,8.333,0,0" VerticalAlignment="Top"/>
        						<Image Source="/BlitsMe.Agent;component/UI/WPF/Images/tweet.png" Width="61" HorizontalAlignment="Left" Margin="240,12.083,0,0" VerticalAlignment="Top" Height="Auto"/>
        					</Grid>
        				</StackPanel>
        			</StackPanel>
        		</Grid>
        	</Border>
        	<StackPanel Orientation="Horizontal" Margin="0,0,28,0" HorizontalAlignment="Right">
        		<TextBlock  Style="{StaticResource MessageTimeStyle}"
        			HorizontalAlignment="Left"
        			Margin="6,4,0,0"
        			Text="{Binding DateTime, Converter={StaticResource relativeMessageTimeConverter}, FallbackValue=Yesterday 8:49}"
						/>
        	</StackPanel>
        </StackPanel>
    </DataTemplate>



</ResourceDictionary>