<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="BlitsMe.Agent.UI.WPF.RosterArea"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/RosterStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        	
        </ResourceDictionary>
    </UserControl.Resources>
	<Grid Style="{StaticResource RosterStyle}" MaxWidth="500">
            <TextBox Margin="8,8,8,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16"/>
            <ListBox Name="Team" ItemsSource="{Binding}" Style="{StaticResource TeamList}" 
				FontFamily="Corbel" Margin="0,74,0,0" ItemTemplate="{DynamicResource RosterItemTemplate}" />
        </Grid>
</UserControl>