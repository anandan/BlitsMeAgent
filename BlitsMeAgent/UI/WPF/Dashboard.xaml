<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" 
	 mc:Ignorable="d"
	x:Class="BlitsMe.Agent.UI.WPF.Dashboard"
	x:Name="Main"
	Title="BlitsMe"
	WindowStartupLocation="CenterScreen" 
	Closing="HideIfClosing" StateChanged="WindowStateChanged" Width="800" Height="600" MinWidth="640" MinHeight="480"
	>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/RosterStyle.xaml" />
                <ResourceDictionary Source="Style/Style.xaml"/>
                <ResourceDictionary Source="Style/EngagementStyle.xaml" />
                <ResourceDictionary Source="Style/NotificationStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot" Style="{StaticResource MainLayout}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="Left" Width="178" Margin="10,10,0,10">
        <StackPanel>
            <Grid>
				<TextBox x:Name="SearchBox" Margin="5,5,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" HorizontalAlignment="Left" Width="145.333" TextChanged="Search_TextChanged" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
				<Button ToolTip="Help" Margin="0,5,5,5" Width="25" HorizontalAlignment="Right">
            		<Image Source="Images/Search.png" Margin="1" />
				</Button>
			</Grid>
            <StackPanel Margin="5" Orientation="Horizontal" Height="32" HorizontalAlignment="Center" >
				<StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0,0,2,0"/>
                    </Style>
                </StackPanel.Resources>
				<Button ToolTip="Help">
            		<Image Source="Images/Help.png" Margin="1"/>
				</Button>
				<Button ToolTip="Logout" Click="Logout">
            		<Image Source="Images/Log Out.png" Margin="1"/>
				</Button>
            </StackPanel>
            <!-- This is the Roster section -->
                <ListBox Name="Team" ItemsSource="{Binding}" Style="{StaticResource TeamList}" 
					FontFamily="Corbel" Margin="0,0,0,27">
                    <ListBox.Resources>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <EventSetter Event="ListBoxItem.Selected" Handler="TeamMemberSelected" HandledEventsToo="True"/>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
        </StackPanel>
		</Grid>
        <Grid Margin="193,8,8,8">
            <DockPanel LastChildFill="True">
                <ItemsControl x:Name="Notifications" DockPanel.Dock="Top" Margin="8,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel VerticalAlignment="Bottom" d:LayoutOverrides="VerticalAlignment" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <!-- Now this is the desktop area -->
                <ContentControl Name="ActiveContent" BorderThickness="1" Background="#FFC8C8C8" BorderBrush="Black" DockPanel.Dock="Bottom" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>