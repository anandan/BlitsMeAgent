<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="BlitsMe.Agent.UI.WPF.ConfirmPasswordWindow"
	x:Name="Window"
	Title="Confirm Password"
	Width="263" Height="71"
	WindowStyle="None"
    AllowsTransparency="False"
    ResizeMode="CanResize" MinWidth="263" MaxWidth="263" MinHeight="71" MaxHeight="71" WindowStartupLocation="CenterOwner">

	<Grid x:Name="LayoutRoot" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
		<Label Content="Confirm Password" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<PasswordBox x:Name="ConfirmPassword" HorizontalAlignment="Left" Height="23" Margin="110.667,0,0,0" VerticalAlignment="Top" Width="120" Password="" FontFamily="Segoe UI" KeyDown="password_KeyDown"/>
		<Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="30.667,28,0,0" VerticalAlignment="Top" Width="75" Click="CancelButtonClick"/>
		<Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="110.667,28,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButtonClick"/>
	</Grid>
</Window>